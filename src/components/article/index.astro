---
import { Image } from "astro:assets";
import about from "../../assets/images/about-me.png";
---

<!-- FIXME: Всмонить систему грид -->
<div class="article">
  <div class="line-wrapper-top">
    <div class="line line1"></div>
    <div class="line line2"></div>
    <div class="line line3"></div>
    <div class="line line4"></div>
    <div class="line line5"></div>
  </div>
  <div class="App-content">
    <div class="grid-container">
      <div class="grid-item">Nginx для фронтенд разработчика</div>
      <div class="grid-item">Docker для фронтенд разработчика</div>
    </div>
  </div>
  <div class="line-wrapper-bottom">
    <div class="line line1"></div>
    <div class="line line2"></div>
    <div class="line line3"></div>
    <div class="line line4"></div>
    <div class="line line5"></div>
  </div>
</div>

<style lang="scss">
  .line-wrapper {
    margin-top: -10px;
  }

  .line-wrapper-bottom {
    margin-bottom: -10px;
  }
  .line {
    width: 100%;
    height: 10px;
  }

  .line1 {
    background: #32a2a4;
  }
  .line2 {
    background: #f59f44;
  }
  .line3 {
    background: #ef5c3e;
  }
  .line4 {
    background: #931e5d;
  }
  .line5 {
    background: #323575;
  }
  .article {
    background: #e9e9de;
  }
  .grid-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 20px;
    padding: 20px;
    margin: 0 auto;
  }

  .grid-item {
    background-color: #403fbe;
    color: #fff;
    padding: 20px;
    text-align: center;
    border: 1px solid #2980b9;
  }

  @media screen and (max-width: 600px) {
    .grid-container {
      display: block;
    }

    .grid-item {
      margin-bottom: 20px;
    }
  }
</style>
